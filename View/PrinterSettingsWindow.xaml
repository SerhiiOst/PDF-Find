<Window x:Class="View.PrinterSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="PDF Find - Settings Printer" Height="260" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Background="Coral">
    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="29*"></ColumnDefinition>
            <ColumnDefinition Width="120*"></ColumnDefinition>
            <ColumnDefinition Width="317*"></ColumnDefinition>
            <ColumnDefinition Width="28*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Content="Paper format:" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Margin="140,7,80,7"></Label>
        <ComboBox Grid.Row="1" Grid.Column="2" Width="70" Margin="0,7,7,7" HorizontalAlignment="Right"></ComboBox>
        <RadioButton Content="Printer from list:" GroupName="CmbBox" IsChecked="True" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Height="15" ></RadioButton>
        <ComboBox Grid.Row="2" Grid.Column="2" Margin="7"></ComboBox>
        <RadioButton Content="Manual printer:" GroupName="CmbBox" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Height="15" ></RadioButton>
        <TextBox Grid.Row="3" Grid.Column="2" Margin="7" VerticalContentAlignment="Center"></TextBox>
        <CheckBox Content="Duplex mode" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" FontWeight="Bold"></CheckBox>
        <Button Content="OK" Grid.Row="5" Grid.Column="2" Width="80"  Margin="10,7,10,7"></Button>
        <Button Content="Cancel" Grid.Row="5" Grid.Column="2" Width="80"  Margin="200,7,10,7"></Button>
    </Grid>
</Window>
